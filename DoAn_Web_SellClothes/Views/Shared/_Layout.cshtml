<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - FTeam</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Assets/css/base.css" rel="stylesheet" />
    <link href="~/assets/css/main.css" rel="stylesheet" />
    <link href="~/Assets/fonts/fontawesome-free-6.1.1-web/css/all.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;500&display=swap" rel="stylesheet">
</head>
<body>
    <div class="app">
        <header class="header-customer">
            <div class="logo">
                @Html.ActionLink("Furny", "Index", "Home")
            </div>

            <ul class="navbar__list">
                <li class="navbar__item navbar__item-link">
                    @Html.ActionLink("Home", "Index", "Home")
                </li>

                <li class="navbar__item navbar__item-link">
                    @Html.ActionLink("Product", "ProductPage", "Product")
                </li>

                <li class="navbar__item navbar__item-link">
                    @Html.ActionLink("About", "Index", "Home")
                </li>
            </ul>

            <ul class="navbar__list">
                <li class="navbar__item">
                    <i class="fa-solid fa-magnifying-glass"></i>
                </li>
                <li class="navbar__item">
                    <i class="fa-solid fa-bag-shopping"></i>
                </li>
                <li class="navbar__item navbar__item-user ">
                    <img src="~/Assets/img/icons/userIcon.png" />
                </li>
            </ul>

        </header>

        <div class="body-content">
            @RenderBody()
        </div>

        <footer class="footer-customer">
            <div class="footer-content">

            </div>
            <div class="footer-bottom">
                <hr />
                <p>copyright @DateTime.Now.Year All rights Reserved. Furny </p>
            </div>
        </footer>
    </div>

    @RenderSection("scripts", required: false)
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Assets/js/main.js"></script>
</body>
</html>
