@model DoAn_Web_SellClothes.Models.Product
@{
    ViewBag.Title = "ProductDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var item = Model;
}
<div>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item ml-5"><a href="@Url.Action("Index", "Home")">Home</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("ProductPage", "Product")">Product</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.NameProduct</li>
        </ol>
    </nav>
    @if (Model.tinhtrangsanpham==false)
    { 

        <div class="product-details">
            <div class="row">
                <div class="col-md-2 col-lg-1 col-4">
                    <ul class="list__img-small">
                        <li>
                            <img src="~/Assets/img/Clothes/@Model.ImageProduct" />
                        </li>
                    </ul>
                </div>
                <div class="col-md-5 col-lg-4 mx-auto">
                    <div class="imgBox">
                        <img src="~/Assets/img/Clothes/@Model.ImageProduct" />
                    </div>
                </div>
                <div class="col-md-4 mx-auto">
                    <h1 class="name-product" style="word-wrap: break-word; white-space:normal" title="@Model.NameProduct">@Model.NameProduct</h1>
                    <h2 class="price-product">@Model.PriceProduct <span>&nbsp;VND</span></h2>
                    <hr class="light" />
                    <h5>Describe</h5>
                    @Model.DescribeProduct
                    <br />
                    <h4>Hết hàng</h4>
                    <br />
                    <a href="@Url.Action("ProductPage","Product")">Trở về</a>
                </div>
            </div>
        </div>
    }
    else
    {
        using (Html.BeginForm("ThemGioHang", "Cart", new { @idProduct = Model.IdProduct, strURL = Request.Url.ToString() }))
        {
            <form>
                <div class="product-details">
                    <div class="row">
                        <div class="col-md-2 col-lg-1 col-4">
                            <ul class="list__img-small">
                                <li>
                                    <img src="~/Assets/img/Clothes/@Model.ImageProduct" />
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-5 col-lg-4 mx-auto">
                            <div class="imgBox">
                                <img src="~/Assets/img/Clothes/@Model.ImageProduct" />
                            </div>
                        </div>
                        <div class="col-md-4 mx-auto">

                            <h1 class="name-product" style="word-wrap: break-word; white-space:normal" title="@Model.NameProduct">@Model.NameProduct</h1>
                            <h2 class="price-product">@Model.PriceProduct <span>&nbsp;VND</span></h2>
                            <hr class="light" />
                            <h5>Describe</h5>
                            @Model.DescribeProduct
                            <div class="occasion-cart desc_single">
                                <h5 class="mt-4">Size</h5>
                                <div class="size" id="custom-radio">
                                    @{
                                        for (int i = 0; i < Model.idSize.Count(); i++)
                                        {
                                            if (Model.soluongton[Model.idSize[i] - 1] != 0 && Model.soluongton[Model.idSize[i] - 1] > 0)
                                            {
                                                <label id="custom-label">
                                                    <input id="nameSize" type="radio" name="nameSize" value="@Model.idSize[i]">
                                                    <span class="ml-3 pt-1 text-center" style="font-size:1.5rem">@Model.sizeProduct[Model.idSize[i] - 1]</span>
                                                    <span class="ml-3 pt-1 text-center" style="font-size:1.5rem">--@Model.soluongton[Model.idSize[i] - 1] Sản phẩm</span>
                                                </label>
                                                <br />
                                            }
                                        }
                                    }
                                </div>
                            </div>

                            <br />
                            <h5>quantity</h5>
                            <div class="btn-quantity shadow-sm">
                                <span class="minus">-</span>
                                <span class="num">01</span>
                                <span class="plus">+</span>
                            </div>
                            <input id="num" type="hidden" value="1" name="quantity" />
                            @if (Session["size"] == null)
                            {
                                <div class="sub-w3l" style="color:red">
                                    <h6> @Session["Error"]</h6>
                                </div>
                            }
                            @if (Session["User"] != null)
                            {
                                <input class="btn btn-outline-dark btn-addtocart shadow my-4" id="ThemGioHang" type="submit" value="Add to cart" />
                            }
                            else
                            {
                                <a href="@Url.Action("LogIn", "Account")" class="btn btn-outline-warning my-4">Bạn cần đăng nhập để thêm sản phẩm vào giỏ hàng!</a>
                            }

                        </div>
                    </div>
                </div>
            </form>
        }
    }

</div>
    
