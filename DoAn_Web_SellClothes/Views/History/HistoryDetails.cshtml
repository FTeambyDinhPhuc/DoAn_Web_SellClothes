@using DoAn_Web_SellClothes.Models;
@model IEnumerable<DoAn_Web_SellClothes.Models.InvoiceDetails>
@{
    ViewBag.Title = "HistoryDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xl history-container py-5 px-5">
    <div class="table-content table-responsive">
        <h2 class="mb-5">Chi tiết đơn hàng: <span>@ViewBag.idInvoice</span></h2>
        <table class="table text-center">
            <thead class="border-bottom text-left">
                <tr>
                    <th>&nbsp;</th>
                    <th>Sản phẩm</th>
                    <th>Size</th>
                    <th>Số lượng</th>
                    <th>Đơn giá</th>
                    <th>Tổng tiền</th>
                </tr>
            </thead>
            <tbody class="text-left">
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="product-thumbnail">
                            <img src="~/Assets/img/Clothes/@item.ImageProduct" />
                        </td>
                        <td class="product-name">
                            <a href="@Url.Action("ProductDetails","Product")">@item.NameProduct</a>
                        </td>
                        <td>
                            @item.SizeProduct
                        </td>
                        <td class="bill-total">
                            @item.Quantity
                        </td>
                        <td class="product-quantity">
                            @item.UnitPrice<span> VNĐ</span>
                        </td>
                        <td class="product-total-price">
                            @item.ThanhTienInvoiceDetails<span> VNĐ</span>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
        <a href="@Url.Action("History","History")" class="btn btn-outline-dark mt-5">Quay lại lịch sử đơn hàng</a>
    </div>
</div>

