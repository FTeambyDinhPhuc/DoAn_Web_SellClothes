
@{
    ViewBag.Title = "EditProduct";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="my-4">Chỉnh sửa sản phẩm</h1>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-user"></i>
            Chỉnh sửa sản phẩm
        </div>
        <div class="card-body">
            <div class="table-Edit table-responsive">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Tên sản phẩm</th>
                            <td>
                                <input type="text" />
                            </td>
                        </tr>
                        <tr>
                            <th>Hình</th>
                            <td>
                                <input type="file" />
                            </td>
                        </tr>
                        <tr>
                            <th>Giá</th>
                            <td>
                                <input type="text" />
                            </td>
                        </tr>
                        <tr>
                            <th>Ngày cập nhật</th>
                            <td>
                                <input type="date" />
                            </td>
                        </tr>
                        <tr>
                            <th>Mô tả</th>
                            <td>
                                <input type="text" />
                            </td>
                        </tr>
                        <tr>
                            <th>Loại</th>
                            <td>
                                <select class="form-control">
                                    <option>Áo nam</option>
                                    <option>Quần nữ</option>
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <th>Trạng thái</th>
                            <td>
                                <select class="form-control">
                                    <option>Còn hàng</option>
                                    <option>Hết hàng</option>
                                </select>
                            </td>
                        </tr>

                    </tbody>

                </table>
            </div>
        </div>
        <input type="submit" class="mybtn btn btn-outline-success" value="Xác nhận" />

    </div>

    <button class="btn btn-outline-dark" onclick="history.back()">Trở về</button>


</div>

