@using DoAn_Web_SellClothes.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<Product>    

@{
    ViewBag.Title = "Product";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid px-4">
    <h1 class="my-4">Quản lý sản phẩm</h1>
    <div class="mb-3">
        <a class="btn btn-success" href="@Url.Action("AddProduct","Manage")">Thêm sản phẩm</a>
    </div>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table "></i>
            Sản phẩm
        </div>
        <div class="card-body">
            <table id="datatablesProduct" class="table-responsive">
                <thead>
                    <tr>
                        <th>Tên sản phẩm</th>
                        <th>Hình</th>
                        <th>Giá</th>
                        <th>Ngày tạo</th>
                        <th>Ngày cập nhật</th>
                        <th>Mô tả</th>
                        <th>Loại</th>
                        <th>Trạng thái</th>
                        <th>&nbsp;</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.NameProduct)</td>
                            <td>
                                <img src="~/Assets/img/Clothes/@Html.DisplayFor(modelItem => item.ImageProduct)" class="img-thumbnail" style="width:75px" alt="Alternate Text" />
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.PriceProduct)<span>đ</span></td>
                            <td>@String.Format("{0:dd/MM/yyyy}", item.CreateDate)</td>
                            <td>@String.Format("{0:dd/MM/yyyy}", item.UpdateDate)</td>
                            <td style="max-width:200px">@Html.DisplayFor(modelItem => item.DescribeProduct)</td>
                            <td>@Html.DisplayFor(modelItem => item.ProductType.NameProductType)</td>
                            <td>@Html.DisplayFor(modelItem => item.StatusProduct)
                            <td>              
                                <a class="btn btn-info w-75 mb-1" @Html.ActionLink("Edit", "EditProduct", new { id = item.IdProduct })></a>
                                <a class="btn btn-warning w-75" @Html.ActionLink("Delete", "DeleteProduct", new { id = item.IdProduct })></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

