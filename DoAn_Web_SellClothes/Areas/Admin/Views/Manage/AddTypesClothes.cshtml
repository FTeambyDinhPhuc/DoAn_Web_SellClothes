
@{
    ViewBag.Title = "AddTypesClothes";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="my-4">Thêm loại đồ</h1>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-shirt"></i>
            Thêm loại đồ
        </div>
        <div class="card-body">
            <div class="table-Edit table-responsive">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Tên loại</th>
                            <td>
                                <input type="text" />
                            </td>
                        </tr>
                        <tr>
                            <th>Giới tính</th>
                            <td>
                                <select class="form-control">
                                    <option>Nam</option>
                                    <option>Nữ</option>
                                </select>

                            </td>
                        </tr>

                    </tbody>

                </table>
            </div>
        </div>
        <input type="submit" class="mybtn btn btn-outline-success" value="Thêm" />

    </div>
    <button class="btn btn-outline-dark" onclick="history.back()">Trở về</button>


</div>

