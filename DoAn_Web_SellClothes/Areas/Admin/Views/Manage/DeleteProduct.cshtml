@model DoAn_Web_SellClothes.Models.Product

@{
    ViewBag.Title = "DeleteProduct";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="my-4">Xóa sản phẩm</h1>

    <div class="card mb-4">
        <div class="card-body">
            <div class="table-Edit table-responsive">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Tên sản phẩm</th>
                            <td>
                                @Html.DisplayFor(model => model.NameProduct)
                            </td>
                        </tr>
                        <tr>
                            <th>Giá sản phẩm</th>
                            <td>
                                @Html.DisplayFor(model => model.PriceProduct)
                            </td>
                        </tr>
                        <tr>
                            <th>Hình</th>
                            <td>
                                @Html.DisplayFor(model => model.ImageProduct)
                            </td>
                        </tr>
                        <tr>
                            <th>Ngày tạo</th>
                            <td>
                                @Html.DisplayFor(model => model.CreateDate)
                            </td>
                        </tr>
                        <tr>
                            <th>Ngày cập nhật</th>
                            <td>
                                @Html.DisplayFor(model => model.UpdateDate)
                            </td>
                        </tr>
                        <tr>
                            <th>Mô tả</th>
                            <td>
                                @Html.DisplayFor(model => model.DescribeProduct)
                            </td>
                        </tr>
                        <tr>
                            <th>Trạng thái</th>
                            <td>
                                @Html.DisplayFor(model => model.StatusProduct)
                            </td>
                        </tr>
                        <tr>
                            <th>Mã loại</th>
                            <td>
                                @Html.DisplayFor(model => model.IdProductType)
                            </td>
                        </tr>

                    </tbody>

                </table>
            </div>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <input type="submit" class="mybtn btn btn-outline-success"/>
        }
    </div>
    <button class="btn btn-outline-dark" onclick="history.back()">Trở về</button>


</div>