
@{
    ViewBag.Title = "Sex";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="my-4">Giới tính</h1>
    <div class="row">
        <div class="col-xl-6">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body">Đồ nam: <span>100</span></div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href="@Url.Action("Product","Manage")">Mã giới tính: 1</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
            <div class="card bg-warning text-white mb-4">
                <div class="card-body">Đồ nữ: <span>50</span></div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href="@Url.Action("Product","Manage")">Mã giới tính: 0</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-chart-bar me-1"></i>
                    Tỷ lệ đồ nam và nữ
                </div>
                <div class="card-body"><canvas id="myPieChart" width="100%" height="40"></canvas></div>
            </div>
        </div>
       

    </div>

</div>

