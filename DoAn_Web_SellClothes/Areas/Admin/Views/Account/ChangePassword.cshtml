
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>LogIn - FTeam</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Assets/css/elegant-icons.css" rel="stylesheet" />
    <link href="~/Assets/fonts/fontawesome-free-6.1.1-web/css/all.css" rel="stylesheet" />
    <link href="~/Assets/css/base.css" rel="stylesheet" />
    <link href="~/Assets/css/style-admin.css" rel="stylesheet" />
</head>
<body class="d-flex justify-content-center">

    <div>
        <label class="Login-label">FTEAM</label>
    </div>

    <div class="login-container shadow">
        <form>
            <div class="login-head">
                <p class="text-center">đổi mật khẩu</p>
            </div>
            <div class="login-body">
                <div class="row mb-4">
                    <div class="col-12 col-md-3">
                        <h6>Old</h6>
                    </div>
                    <div class="col-12 col-md-9">
                        <input class="login-input" placeholder="Nhập mật khẩu cũ" type="text">
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-12 col-md-3">
                        <h6>New</h6>
                    </div>
                    <div class="col-12 col-md-9">
                        <input class="login-input" placeholder="Nhập mật khẩu mới" type="password">
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-12 col-md-3">
                        <h6>Confirm</h6>
                    </div>
                    <div class="col-12 col-md-9">
                        <input class="login-input" placeholder="Xác nhận mật khẩu" type="password">
                    </div>
                </div>
                <a href="@Url.Action("LogIn","Account")" class=" btn btn-info login-btn">Xác nhận</a>
                @*<input type="submit" class=" btn btn-info login-btn" value="Login" />*@
            </div>
        </form>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Assets/js/admin.js"></script>
</body>
</html>
